# ==========================================
# LLM Provider (Choose one or both)
# ==========================================
OPENAI_API_KEY=sk-your-openai-api-key-here
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key-here

# ==========================================
# LangFuse (LLM Observability)
# ==========================================
LANGFUSE_PUBLIC_KEY=pk-lf-your-public-key
LANGFUSE_SECRET_KEY=sk-lf-your-secret-key
LANGFUSE_HOST=http://langfuse:3000

# ==========================================
# ServiceNow Integration
# ==========================================
SNOW_INSTANCE_URL=https://your-instance.service-now.com
SNOW_USERNAME=admin
SNOW_PASSWORD=your-snow-password
SNOW_CLIENT_ID=your-client-id
SNOW_CLIENT_SECRET=your-client-secret

# ==========================================
# Jira Integration
# ==========================================
JIRA_URL=https://your-domain.atlassian.net
JIRA_USERNAME=your-email@company.com
JIRA_API_TOKEN=your-jira-api-token
JIRA_PROJECT_KEY=ENG

# ==========================================
# GitHub Integration
# ==========================================
GITHUB_TOKEN=ghp_your-github-personal-access-token
GITHUB_ORG=your-organization
GITHUB_REPO=your-repo

# ==========================================
# Database Configuration
# ==========================================
POSTGRES_USER=admin
POSTGRES_PASSWORD=admin123
POSTGRES_DB=agentdb
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
LANGFUSE_DATABASE_URL=postgresql://admin:admin123@postgres:5432/langfuse

# ==========================================
# Neo4j Configuration
# ==========================================
NEO4J_URI=bolt://neo4j:7687
NEO4J_USERNAME=neo4j
NEO4J_PASSWORD=password123

# ==========================================
# Redis Configuration
# ==========================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# ==========================================
# Weaviate Configuration
# ==========================================
WEAVIATE_URL=http://weaviate:8081
WEAVIATE_API_KEY=

# ==========================================
# Kafka Configuration
# ==========================================
KAFKA_BOOTSTRAP_SERVERS=kafka:9092
KAFKA_CONSUMER_GROUP=agent-platform

# ==========================================
# DSPy Configuration
# ==========================================
DSPY_OPTIMIZER_URL=http://dspy_optimizer:8090
DSPY_MODEL=gpt-4
DSPY_CACHE_DIR=/app/.dspy_cache

# ==========================================
# Security & Auth
# ==========================================
JWT_SECRET_KEY=your-super-secret-jwt-key-change-this
NEXTAUTH_SECRET=your-nextauth-secret-change-this
NEXTAUTH_URL=http://localhost:3001
SALT=your-salt-change-this

# ==========================================
# Observability
# ==========================================
PROMETHEUS_URL=http://prometheus:9090
GRAFANA_ADMIN_PASSWORD=admin

# ==========================================
# Application Configuration
# ==========================================
LOG_LEVEL=INFO
ENVIRONMENT=development
DEBUG=false

# ==========================================
# HITL (Human-in-the-Loop) Configuration
# ==========================================
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
APPROVAL_TIMEOUT_MINUTES=30

# ==========================================
# GCP Monitoring Configuration
# ==========================================
GCP_PROJECT_ID=your-gcp-project-id
GCP_CREDENTIALS_PATH=./gcp-credentials.json
# Download service account key from GCP Console:
# IAM & Admin > Service Accounts > Create Key (JSON)
